<div class="" id="book-table">

    <div class="overflow-x-auto rounded-xl shadow-lg">
        <table class="min-w-full text-left" >
            <thead class="bg-gray-100 font-semibold uppercase text-sm">
            <tr>
                <th class="px-4 py-3">Name</th>
                <th class="px-4 py-3 text-right">Actions</th>

            </tr>
            </thead>

            <tbody class="divide-y">
            {% for author in authors %}
                    <td class="px-4 py-2 font-medium">{{ author.name }}</td>
                    <td class="px-4 py-2 text-right">
                        <a  href="{{ path('author_edit',  { id: author.id }) }}" class="text-gray-600 hover:text-blue-400 cursor-pointer">
                            Edit
                        </a>
                        <form method="POST" action="{{ path('author_delete', { id: author.id }) }}" onsubmit="return confirm('Are you sure you want to delete this author?');" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-red-600 hover:text-red-400 cursor-pointer bg-transparent border-none p-0 m-0">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-4 py-4 text-center text-gray-500">
                        No authors found.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-center">
        {{ knp_pagination_render(authors) }}
    </div>

</div>